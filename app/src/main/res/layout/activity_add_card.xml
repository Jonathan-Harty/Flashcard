<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cancel_add_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:src="@drawable/cancel_add" />

    <EditText
        android:id="@+id/edit_question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="21dp"
        android:hint="Enter Question Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_answer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="91dp"
        android:hint="Enter Answer Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_incorrect_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="175dp"
        android:hint="Enter Incorrect Choice Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_incorrect_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="246dp"
        android:hint="Enter Incorrect Choice Here"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/save_question"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/cancel_add_card"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:src="@drawable/save_new_question" />

</RelativeLayout>